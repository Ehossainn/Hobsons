<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Hobsons_webApp_SmokeTestSuite">
	<listeners>
		<listener class-name="hobsons.com.utility.ExtentReporter" />
		<listener class-name="hobsons.com.utility.RetryTransformer" />
	</listeners>

	<test name="SmokeTest">
		<groups>
			<run>
				<include name="smoke" />
			</run>
		</groups>
		<classes>
			<class name="hobsons.com.testCases.CareerPageTestCases" />
			<class name="hobsons.com.testCases.HomePageTestCases" />
			<class name="hobsons.com.testCases.OpenPositionTestCases" />
			<class name="hobsons.com.testCases.ApplicationSignUpTestCase" />

		</classes>
	</test> <!-- Test -->
</suite> <!-- Suite -->
